<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_frame"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="请选择领取方式"
            android:textColor="@color/color_01ABFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/H10dp"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <EditText
        android:id="@+id/ecit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/H10dp"
        android:layout_marginLeft="@dimen/H15dp"
        android:layout_marginRight="@dimen/H15dp"
        android:background="@drawable/buttonborders2"
        android:hint="请输入数量"
        android:inputType="number"
        android:padding="12dp"
        android:textColorHint="#d3d3d3"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/zhifubao_rl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/zhifubao_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/H5dp"
                android:src="@drawable/cb_addshop_select" />

            <LinearLayout
                android:layout_width="@dimen/H100dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/dialog_buyment_filletborder"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/H5dp"
                android:paddingTop="@dimen/H5dp">

                <TextView
                    android:id="@+id/zhifubao_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/zhifubao"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/zhifubao_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/weixin_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/weixin_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/H5dp"
                android:src="@drawable/cb_addshop_select"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="@dimen/H100dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/dialog_buyment_filletborder"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/H5dp"
                android:paddingTop="@dimen/H5dp">

                <TextView
                    android:id="@+id/weixin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/weixin"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weixin_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/all_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color333333"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/all_bg" />

        <TextView
            android:id="@+id/dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_01ABFF"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>