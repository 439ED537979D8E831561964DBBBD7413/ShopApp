<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_frame"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="请输入条码"
            android:textColor="@color/color_01ABFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/H10dp"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <EditText
        android:id="@+id/ecit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="@dimen/H15dp"
        android:layout_marginRight="@dimen/H15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonborders2"
        android:hint="如果不填写请按确认"
        android:maxLength="11"
        android:padding="12dp"
        android:textColor="#bbbbbb"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/all_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="扫描"
            android:textColor="@color/color333333"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/all_bg" />

        <TextView
            android:id="@+id/dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_01ABFF"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>