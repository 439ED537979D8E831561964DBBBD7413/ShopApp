<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <TextView
        android:id="@+id/phonenumber_txt"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/pandingtop"
        android:text="验证手机号码"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_to_centent"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="手机号码"
            android:textColor="@color/title_font"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/phonenumber_edt"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:paddingLeft="@dimen/pandingtop"
            android:maxLength="11"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginTop="@dimen/title_to_centent"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="验  证  码"
            android:textColor="@color/title_font"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/code_edt"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="18dp"
            android:layout_weight="1"
            android:background="@color/touming"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/getcode_txt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_redborder"
            android:gravity="center"
            android:padding="@dimen/pandingtop"
            android:text="获取验证码"
            android:textColor="@color/red"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/title_to_centent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="下 一 步"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
