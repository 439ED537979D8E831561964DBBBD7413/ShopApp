<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf5f5f5"
    android:orientation="vertical"
    tools:context="com.yj.shopapp.ui.activity.shopkeeper.BindAccountActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_lift_arrayblack">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="绑定支付宝"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/colorcDDDDDD" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorcFEFAF1"
        android:paddingBottom="6dp"
        android:paddingLeft="18dp"
        android:paddingTop="6dp"
        android:text="请仔细核对您的支付宝账号，以确保能准确成功的打款"
        android:textColor="@color/colorc666666"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="姓名"
            android:textColor="@color/colorc666666" />

        <com.yj.shopapp.view.ClearEditText
            android:id="@+id/usernameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入姓名"
            android:lines="1"
            android:paddingLeft="40dp"
            android:singleLine="true"
            android:textColor="@color/line3"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorcDDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="13dp">

        <TextView
            android:id="@+id/accountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="支付宝"
            android:textColor="@color/colorc666666" />

        <com.yj.shopapp.view.ClearEditText
            android:id="@+id/account_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@null"
            android:hint="请输入支付宝账号"
            android:lines="1"
            android:paddingLeft="25dp"
            android:singleLine="true"
            android:textColor="@color/line3"
            android:textSize="14sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/submit_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fillet_tv_2"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>
