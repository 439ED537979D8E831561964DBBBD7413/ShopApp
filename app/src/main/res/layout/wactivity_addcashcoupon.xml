<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        layout="@layout/titlebar"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pandingtop"
        android:background="@color/color_c9c9c9"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pandingtop"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
               >

                <TextView
                    android:id="@+id/shopername_tv"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/shopnametv"
                    android:hint="使用对象"
                    />

                <TextView
                    android:id="@+id/shopnametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_centerVertical="true"
                    android:text="使用对象："

                    android:layout_alignParentLeft="true"
                   />

            </RelativeLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2f2f2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                >

                <TextView
                    android:id="@+id/classifitcationTv"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/classifitcation_btn"
                    android:hint="使用范围"
                    />

                <TextView
                    android:id="@+id/classifitcation_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_centerVertical="true"
                    android:text="使用范围："

                    android:layout_alignParentLeft="true"
                     />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f2f2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                >

                <TextView
                    android:id="@+id/starttime_btn"
                    android:layout_width="wrap_content"

                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color"

                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/starttimetv"
                    android:hint="开始日期"
                    />

                <TextView
                    android:id="@+id/starttimetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
android:layout_centerVertical="true"
                    android:text="使用开始日期："

                    android:layout_alignParentLeft="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f2f2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                >

                <TextView
                    android:id="@+id/endtime_btn"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/endtimetv"
                    android:hint="使用结束日期"
                    />

                <TextView
                    android:id="@+id/endtimetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_centerVertical="true"
                    android:text="结束日期："

                    android:layout_alignParentLeft="true"
                   />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f2f2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                >

                <TextView
                    android:id="@+id/money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_alignParentLeft="true"
                    android:text="金        额:"/>

                <EditText
                    android:id="@+id/money_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color2"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/money_tv"
                    android:layout_alignParentRight="true"
                    android:inputType="number"
                    android:hint="填写金额"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f2f2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                >

                <TextView
                    android:id="@+id/condition_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"

                    android:text="满多少可用:"/>

                <EditText
                    android:id="@+id/condition_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/condition_tv"
                    android:inputType="number"



                    android:hint="满多少可用"/>



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f2f2"/>
            <TextView
                android:id="@+id/save_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="提交"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
