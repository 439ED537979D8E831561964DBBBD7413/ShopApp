<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/timeSelectView"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.yj.shopapp.util.Allpopupwindow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:elevation="@dimen/H3dp"
        android:gravity="center"
        android:layout_height="@dimen/title_height">

        <TextView
            android:id="@+id/exit_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_gt"
            android:gravity="center"
            android:text="选择时间"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/finish_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="完成"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/H5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/starttimetv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/tv_bottomline_select"
            android:gravity="center"
            android:text="开始日期"
            android:textColor="@color/skyblue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="至"/>

        <TextView
            android:id="@+id/endtimetv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/tv_bottomline"
            android:gravity="center"
            android:text="结束日期"
            android:textColor="@drawable/tab_tv_color"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/delect_tv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/H5dp"
        android:src="@drawable/ic_trash_ash"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <DatePicker
            android:id="@+id/mDatepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"/>
    </RelativeLayout>

</LinearLayout>
