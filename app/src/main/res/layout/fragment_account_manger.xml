<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/finish_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_lift_arrayblack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现账号"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorf5f5f5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H40dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="您可对尾号9999的支付宝进行操作"
            android:textColor="@color/color_999999"/>

        <TextView
            android:id="@+id/modify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H40dp"
            android:layout_marginTop="@dimen/H1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="修改"
            android:textColor="@color/colorcD22222"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H40dp"
            android:layout_marginTop="@dimen/H4dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color333333"/>
    </LinearLayout>

</LinearLayout>