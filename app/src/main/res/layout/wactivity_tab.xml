        <!--android:drawableTop="@drawable/icon_goods"-->
        <!--android:drawablePadding="4dp"-->
        <!--android:text="分类" />-->
        <!--<RadioButton-->
        <!--android:id="@+id/tab_client"-->
        <!--style="@style/Main_Tab"-->
        <!--android:drawableTop="@drawable/icon_client"-->
        <!--android:drawablePadding="4dp"-->
        <!--android:text="客户" />-->
        <RadioButton
            android:id="@+id/tab_mtinfo"
            style="@style/Main_Tab"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/icon_info"
            android:text="我的"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/tabs_rg"
        android:background="@color/color_f2f2f2"/>
</RelativeLayout>
