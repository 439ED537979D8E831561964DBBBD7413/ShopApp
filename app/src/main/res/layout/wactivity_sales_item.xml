<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/H10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border1dp"
        android:padding="@dimen/H1dp"
        fresco:placeholderImage="@drawable/load"
        fresco:placeholderImageScaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_ord_clolr"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/H15dp"
                android:layout_marginRight="@dimen/H15dp"
                android:drawableEnd="@drawable/next_icon"
                android:drawablePadding="@dimen/H6dp"
                android:drawableRight="@drawable/next_icon"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_999999" />

        </LinearLayout>

        <TextView
            android:id="@+id/startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/H8dp"
            android:layout_marginTop="@dimen/H8dp"
            android:text=""
            android:textColor="@color/text_color2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/orderContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color909090"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>