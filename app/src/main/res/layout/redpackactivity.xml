<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redpack_bg_3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_gravity="center"
        android:background="@color/white">

        <ImageView
            android:id="@+id/rule_return"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_lift_arrayblack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="红包列表"
            android:textColor="@color/color333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="超级红包"
            android:textColor="@color/color333333" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/one_redpack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/redpack_p_1">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:paddingTop="8dp"
            android:shadowColor="#40000000"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text=""
            android:textColor="#F1FF00"
            android:textSize="34sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/two_redpack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/redpack_p_1">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:paddingTop="8dp"
            android:shadowColor="#40000000"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text=""
            android:textColor="#F1FF00"
            android:textSize="34sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/three_redpack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/redpack_p_1">

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:paddingTop="8dp"
            android:shadowColor="#40000000"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text=""
            android:textColor="#F1FF00"
            android:textSize="34sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>