<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorf5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H9dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colore7e7e7" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/itemview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/shopimag"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingTop="@dimen/H6dp">

                <TextView
                    android:id="@+id/shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:text=""
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.yj.shopapp.view.SaleProgressView
                        android:id="@+id/spv"
                        android:layout_width="130dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="@dimen/H6dp"
                        android:layout_marginTop="@dimen/H6dp"
                        app:nearOverText="即将售罄"
                        app:overText="已售罄"
                        app:textColor="@color/white"
                        app:textSize="11sp" />

                    <TextView
                        android:id="@+id/Limit_shopping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingLeft="2dp"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/limet_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:paddingTop="@dimen/H5dp"
                        android:text=""
                        android:textColor="@color/color_fec329"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Purchase_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_fc2b32"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/H8dp"
                        android:text=""
                        android:textColor="@color/color_a9a9a9"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/gorob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/fillet_tv_red"
                android:drawablePadding="@dimen/H5dp"
                android:drawableRight="@drawable/ic_right_arr"
                android:gravity="center"
                android:paddingBottom="@dimen/H4dp"
                android:paddingLeft="@dimen/H10dp"
                android:paddingRight="@dimen/H10dp"
                android:paddingTop="@dimen/H4dp"
                android:text="马上抢"
                android:textColor="@color/white" />

            <!--android:src="@drawable/snatchatonce"-->
            <TextView
                android:id="@+id/CountdownTv"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_alarmclock"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="3dp"
                android:text=""
                android:textColor="@color/white"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/ceshi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/borderbg1dp"
        android:paddingLeft="@dimen/H10dp"
        android:visibility="gone" />


</LinearLayout>