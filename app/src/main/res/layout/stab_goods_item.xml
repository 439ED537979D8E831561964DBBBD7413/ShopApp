<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/itemview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/choose_re"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/checkbox_style"
                android:padding="3dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="@dimen/H8dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simpleDraweeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borderbg1dp"
                android:padding="@dimen/H1dp" />


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/top_simpleDraweeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                fresco:placeholderImage="@drawable/pause" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/goodsnameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/H2dp"
                android:singleLine="true"
                android:text="名字"
                android:textColor="@color/color333333" />

            <TextView
                android:id="@+id/goodAddress_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/H2dp"
                android:singleLine="true"
                android:text="位置"
                android:visibility="gone"
                android:textColor="@color/color_999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/specsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/H2dp"
                android:text="数量："
                android:textColor="@color/color_999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/shopnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/H2dp"
                android:text="规格："
                android:textColor="@color/color_999999"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/money_lowgood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/H2dp"
                    android:text="金额："
                    android:textColor="@color/color_999999"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/sales_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/color_999999" />

                <TextView
                    android:id="@+id/addcartTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/H8dp"
                    android:background="@drawable/goodcar_bg3"
                    android:gravity="center"
                    android:padding="@dimen/H5dp"
                    android:text="加入购物车"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>