<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wu"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="无"
            android:textColor="@color/text_color"
           android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:visibility="gone"

            />

<LinearLayout
    android:id="@+id/parent_lt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/agentNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="123456789"/>

            <TextView
                android:id="@+id/agentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/agentNameTv"
                android:layout_marginLeft="8dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@color/colorAccent"
                android:text="状态"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="@color/text_color2"
                android:gravity="center"
                android:text="手机:"/>

            <TextView
                android:id="@+id/agentNoTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:textColor="@color/text_color2"
                android:gravity="center"
                android:text="123456789"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/lianxi_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color2"
                android:gravity="center"
                android:text="固话:"/>

            <TextView
                android:id="@+id/agentLinkmanTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lianxi_Tv"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color2"
                android:gravity="center"
                android:text="123456789"/>
            <TextView
                android:id="@+id/delect_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/pandingtopmin"
                android:paddingTop="@dimen/pandingtopmin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/pandingtop"
                android:background="@drawable/buleyuanjiao"
                android:text="删除"/>
        </RelativeLayout>


</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/color_f2f2f2"/>
    </LinearLayout>

</LinearLayout>
