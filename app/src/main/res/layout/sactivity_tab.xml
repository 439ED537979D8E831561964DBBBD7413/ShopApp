<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <android.support.v4.view.ViewPager
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabs_rg"
        android:background="@color/all_bg"/>

    <RadioGroup
        android:id="@+id/tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonborders"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tab_home"
            style="@style/Main_Tab"
            android:checked="true"
            android:drawableTop="@drawable/home"
            android:text="首页"
            android:textColor="@color/tab_tx_color"/>

        <RadioButton
            android:id="@+id/tab_order"
            style="@style/Main_Tab"
            android:drawableTop="@drawable/order"
            android:text="订单"
            android:textColor="@color/tab_tx_color"/>

        <RadioButton
            android:id="@+id/tab_brand"
            style="@style/Main_Tab"
            android:drawableTop="@drawable/tab_brand"
            android:text="品牌"
            android:textColor="@color/tab_tx_color"/>

        <TextView
            android:id="@+id/tab_client"
            style="@style/Main_Tab"
            android:drawableTop="@drawable/tab_car"
            android:text="购物车"
            android:textColor="@color/text_tab"/>

        <TextView
            android:id="@+id/tab_mtinfo"
            style="@style/Main_Tab"
            android:drawableTop="@drawable/tab_mine"
            android:text="我的"
            android:textColor="@color/text_tab"/>

    </RadioGroup>

</RelativeLayout>
