<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/titlebar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/H10dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/border1dp"
                        fresco:placeholderImage="@drawable/load"
                        fresco:placeholderImageScaleType="focusCrop" />

                    <LinearLayout
                        android:id="@+id/changeLy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/H5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="成本价:" />

                            <TextView
                                android:id="@+id/chengbenpriceTx"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="批  发  价:" />

                            <TextView
                                android:id="@+id/goodspriceTx"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="起    购:" />

                            <TextView
                                android:id="@+id/item_min_num"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="限        购:" />

                            <TextView
                                android:id="@+id/item_max_num"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="库    存:" />

                            <TextView
                                android:id="@+id/goodinventoryTx"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="停售库存:" />

                            <TextView
                                android:id="@+id/stopitemsum"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="最小值:" />

                            <TextView
                                android:id="@+id/min_goodinventoryTx"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="最  大  值:" />

                            <TextView
                                android:id="@+id/max_goodinventoryTx"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="零售价:" />

                            <TextView
                                android:id="@+id/retail_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorf5f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/H10dp"
                    android:visibility="gone"
                    android:paddingRight="@dimen/H10dp">

                    <CheckBox
                        android:id="@+id/add_hotindex"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@drawable/goodsdatails_chexkbox"
                        android:text="   加入热门推荐"
                        android:textColor="@color/color333333" />

                    <CheckBox
                        android:id="@+id/add_stopsale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@drawable/goodsdatails_chexkbox"
                        android:text="   加入暂停销售"
                        android:textColor="@color/color333333" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/goto_salesRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="加入促销"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goto_salesTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:drawableEnd="@drawable/next_icon"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_999999" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f2f2f2" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/goodsupplierRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="供应商"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goodsupplier_Tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:drawableEnd="@drawable/next_icon"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_999999" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorf5f5f5" />

                <RelativeLayout
                    android:id="@+id/goodsclassifyRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:text="商品分类"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goodsclassify_Tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_999999" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorf5f5f5" />

                <RelativeLayout
                    android:id="@+id/goodsbrand"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:text="商品品牌"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goodscbrand_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:drawableEnd="@drawable/next_icon"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_999999" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorf5f5f5" />

                <RelativeLayout
                    android:id="@+id/goodsAddressRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="商品位置"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goodAddress_Tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxEms="8"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_999999" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorf5f5f5" />

                <RelativeLayout
                    android:id="@+id/goodsunitRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="单位"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goodsunit_Tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_999999" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorf5f5f5" />

                <RelativeLayout
                    android:id="@+id/goodsnameRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="商品名称"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goodsnane_Tx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/name_tv"
                        android:layout_toRightOf="@id/name_tv"
                        android:drawableEnd="@drawable/next_icon"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:ellipsize="end"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_999999" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorf5f5f5" />

                <RelativeLayout
                    android:id="@+id/goodsbarRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="商品条码"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goodsbar_Tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:drawableEnd="@drawable/next_icon"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:gravity="center_vertical"
                        android:hint="可扫码条码可为空"
                        android:text=""
                        android:textColor="@color/color_999999" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorf5f5f5" />

                <RelativeLayout
                    android:id="@+id/goodscodeRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="货号编码"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goodsode_Tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_999999" />


                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorf5f5f5" />

                <RelativeLayout
                    android:id="@+id/goodsnormsRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="商品规格"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goodsnorms_Tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_999999" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorf5f5f5" />

                <RelativeLayout
                    android:id="@+id/goodsExplainRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H40dp"
                    android:paddingLeft="@dimen/H10dp"
                    android:paddingRight="@dimen/H10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="商品提示"
                        android:textColor="@color/color333333" />

                    <TextView
                        android:id="@+id/goodExplain_Tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/H5dp"
                        android:drawableRight="@drawable/next_icon"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxEms="8"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_999999" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/goodsdetailRL"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/H100dp"
                    android:layout_marginBottom="@dimen/H50dp"
                    android:background="@drawable/border1dp">

                    <TextView
                        android:id="@+id/goodsdetaail_Tx"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入商品介绍"
                        android:padding="@dimen/H5dp"
                        android:text=""
                        android:textColor="@color/color_999999"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/submit"
        style="@style/Widget.Button.CardItem2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认提交"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>