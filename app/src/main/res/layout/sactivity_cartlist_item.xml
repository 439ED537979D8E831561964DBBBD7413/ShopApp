    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/choose_re"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding_all"
            android:paddingRight="10dp">


            <ImageView
                android:id="@+id/choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_shopcart_unhook" />

        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simpleDraweeView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            fresco:placeholderImage="@drawable/load"
            fresco:placeholderImageScaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/padding_all"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goodsnameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="14sp"-->
                <!--android:textColor="@color/color_theme"-->
                <!--android:text="单      价:  "/>-->

                <TextView
                    android:id="@+id/unitpriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条码  "
                    android:textColor="@color/text_gary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/numberTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_theme"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/jine_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="金额:￥"
                    android:textColor="@color/color_fd2f2f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/jine_txt"
                    android:text=""
                    android:textColor="@color/color_fd2f2f"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/num_re"
                    android:layout_width="95dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/huiseruanjiao">

                    <RelativeLayout
                        android:id="@+id/lessen_re"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="0.5dp">

                        <ImageView
                            android:id="@+id/add_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_shopcart_reduce" />

                        <View
                            android:layout_width="@dimen/line"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/title_line" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tool_number_txt"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/lessen_re"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/text_black" />

                    <RelativeLayout
                        android:id="@+id/add_re"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tool_number_txt"
                        android:paddingLeft="0.5dp">


                        <ImageView
                            android:id="@+id/lessen_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_shopcart_plus"
                            android:textColor="@color/text_black" />

                        <View
                            android:layout_width="@dimen/line"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@color/title_line" />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>