<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf5f5f5"
    android:orientation="vertical"
    tools:context="com.yj.shopapp.ui.activity.shopkeeper.AuthenticationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_lift_arrayblack">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="添加支付宝"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/colorcDDDDDD" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorcFEFAF1"
        android:paddingBottom="6dp"
        android:paddingLeft="18dp"
        android:paddingTop="6dp"
        android:text="为了您的账户安全，请完成身份验证"
        android:textColor="@color/colorc666666"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="手机号"
            android:textColor="@color/colorc666666" />

        <EditText
            android:id="@+id/phonenumber_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="phone"
            android:focusable="false"
            android:paddingLeft="25dp"
            android:singleLine="true"
            android:textColor="@color/line3"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorcDDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="验证码"
            android:textColor="@color/colorc666666" />

        <com.yj.shopapp.view.ClearEditText
            android:id="@+id/vercode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="25dp"
            android:singleLine="true"
            android:textColor="@color/line3"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/colorcDDDDDD" />

        <TextView
            android:id="@+id/getVercode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorc0E8EE7"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/submit_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fillet_tv_2"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>
